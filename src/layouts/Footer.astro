---
import { Link } from "../components/link";
import { pageSection } from "../styles/page-section";
---

<footer>
  <section id="contact" class={pageSection()}>
    <h2>Get in touch</h2>
    <p>
      Feel free to{" "}
      <Link href="mailto:hello@omardiab.com">shoot me an email</Link>
      {" or "}
      <Link href="https://linkedin.com/in/osdiab">check my LinkedIn.</Link>
    </p>
  </section>
  <section id="fork-github" class={pageSection()}>
    <p>
      Like this site? Feel free to{" "}
      <Link href="https://github.com/osdiab/omardiab.com">
        fork it on Github{" "}
        and make it your own.
      </Link>
    </p><p>Omar Diab, {new Date().getFullYear()}</p>
  </section>
</footer>

<style lang="scss">
  footer {
    display: flex;
    flex-direction: column;
    #contact {
      padding-bottom: 2rem;
      align-self: flex-start;

      display: flex;
      flex-direction: column;
      gap: 1rem;
    }
    #fork-github {
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
      padding: 2rem;
    }
  }
</style>
